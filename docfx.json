{
  "metadata": [
    {
      "src": [
        {
          "files": [ "SpiceSharp/bin/Debug/net45/*.dll" ]
        }
      ],
      "force": false,
      "dest": "SpiceSharp/bin/api",
	    "properties": {
		    "TargetFramework": "net45"
	    }
	  }
  ],
  "build": {
    "content": [
      {
        "files": [ "api/*.yml" ],
        "src": "SpiceSharp/bin"
      },
      {
        "files": [
            "*.md",
            "*.yml",
            "api/*.md", "api/*.yml",
            "articles/*.md", "articles/*.yml",
            "articles/**/*.md", "articles/**/*.yml"
        ],
        "exclude": [ "appveyor.yml", ".travis.yml", "docs/**", "SpiceSharp/**" ]
      }
    ],
    "resource": [
      {
        "files": [
            "api/images/**",
            "articles/images/**",
            "articles/**/images/**"
        ],
        "exclude": [ "docs/**" ]
      }
    ],
	"globalMetadata" : {
      "_appFaviconPath": "api/images/favicon.ico",
      "_appLogoPath": "api/images/favicon.svg",
      "_disableContribution": "true"
	},
    "dest": "docs",
    "maxParallelism": 4,
    "template": [ "default", "material/material" ],
	"force": true
  }
}
